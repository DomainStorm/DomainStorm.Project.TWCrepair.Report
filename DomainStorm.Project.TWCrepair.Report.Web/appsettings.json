{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Elasticsearch", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "DomainStorm.Project.TWCrepair.Report.Web"
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.json",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          //"apiKey": "iVPcw1...",
          "serverUrl": "http://seq:5341"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://elasticsearch:9200",
          "autoRegisterTemplate": true,
          "indexFormat": "domain-storm-{0:yyyy.MM}",
          "inlineFields": true,
          "numberOfReplicas": 2,
          "numberOfShards": 2
        }
      }
    ]
  },
  "OpenIDConnectOptions": {
    "Authority": "http://localhost:5050",
    "Audience": "",
    "Scopes": {
      "profile": "",
      "openid": "",
      "department_read": "",
      "user_read": "",
      "post_read": ""

    },
    "ClientId": "sti",
    "ClientSecret": "TynU8DW6"
  },
  "DaprOptions": {
    "StoreName": "statestore"
  },
  "AllowedHosts": "*",
  "SqlDbOptions": {
    "ConnectionString": ""
  },

  //新增資源工料項目時,種類和代碼的對照(報表專案用不到)
  "ResourceWorkMaterialCodeMappings": []
}
