#See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

RUN apt-get update
RUN apt-get install curl -y
RUN apt-get install -y libreoffice

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["DomainStorm.Template.Report.Web/DomainStorm.Template.Report.Web.csproj", "DomainStorm.Template.Report.Web/"]
COPY ["DomainStorm.Framework/DomainStorm.Framework.RazorEngine/DomainStorm.Framework.RazorEngine.csproj", "DomainStorm.Framework/DomainStorm.Framework.RazorEngine/"]
COPY ["DomainStorm.Template.Report.BlazorComponent/DomainStorm.Report.BlazorComponent.csproj", "DomainStorm.Template.Report.BlazorComponent/"]
RUN dotnet restore "DomainStorm.Template.Report.Web/DomainStorm.Template.Report.Web.csproj"
COPY . .
WORKDIR "/src/DomainStorm.Template.Report.Web"
RUN dotnet build "DomainStorm.Template.Report.Web.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "DomainStorm.Template.Report.Web.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "DomainStorm.Template.Report.Web.dll"]